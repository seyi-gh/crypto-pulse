---
import CryptoCard from '../components/CryptoCard';
import FavoriteTicker from '../components/FavoriteTicker';

import '../styles/global.css'; //? Fixed line migrating (tailwind v4)

//! External server requests !
const response = await fetch('https://api.coingecko.com/api/v3/coins/markets?vs_currency=usd&order=market_cap_desc&per_page=12&page=1&sparkline=false');
const data = await response.json();

// ~ frontmatter interface ~
interface Coin {
  id: string;
  name: string;
  current_price: number;
  price_change_percentage_24h: number;
  image: string;
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>CryptoPulse | SSR Dashboard</title>
  </head>
  <body class="bg-slate-950 min-h-screen text-slate-200 p-8">
    <main class="max-w-6xl mx-auto">
      <header class="mb-12">
        <h1 class="text-4xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-500">
          CryptoPulse SSR
        </h1>
        <p class="text-slate-400 mt-2">
          Prices rendered on (Vercel + Nano Stores)
        </p>
      </header>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {data.map((coin: Coin) => (
          <CryptoCard
            client:visible
            id={coin.id}
            name={coin.name}
            price={coin.current_price}
            change24h={coin.price_change_percentage_24h}
            image={coin.image}
          />
        ))}
      </div>

      <FavoriteTicker client:load />
    </main>
  </body>
</html>